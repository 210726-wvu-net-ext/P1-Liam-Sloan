@model SignedInUser

    <link href="~/css/stylesheet.css" rel="stylesheet" />

    <div class="loginform">
        <h2>Welcome! Please enter your username and password.</h2>
        <p @ViewData["user"]></p>
        <form method="post" asp-action="SignIn">
            <p>Username:</p>
            <input asp-for="username" type="text" name="username" />
            <span asp-validation-for="username" class="text-danger"></span>
            <p>Password:</p>
            <input asp-for="password" type="password" name="password" />
            <span asp-validation-for="password" class="text-danger"></span>
            <br />
            <input class="btn btn-dark" type="submit" name="submit" value="submit" />
        </form>


        <p id="registertext">Don't have an account? <a asp-action="Register">Register Here.</a></p>

    </div>
